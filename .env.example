# -----------------------------------------------------------------
#how to run run this command -> uvicorn app.main:app --reload
#########################
# Data-source selector
#########################
#supabase | fmp
DATA_SOURCE=supabase

#########################
# Supabase credentials
#########################
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_DB_URL=postgresql://postgres:Aitoxr%402025%40%40%21@db.weqtoyuwarqjfdwrzdip.supabase.co:5432/postgres
SUPABASE_BUCKET=chatbot-outputs

#########################
# Financial Modeling Prep
#########################
FMP_API_KEY=
FMP_BASE_URL=https://financialmodelingprep.com/stable

#########################
# LLM provider selector
#########################
 # http | openai
LLM_PROVIDER=http            

# ---  If LLM_PROVIDER=http  (local Ollama)  ---------------------
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_MODEL=llama3:8b        
# OPENAI_API_KEY=             

# ---  If LLM_PROVIDER=openai (cloud)  ---------------------------
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
OPENAI_API_KEY=
#########################
# Generation defaults
#########################
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

#########################
# Server settings
#########################
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
